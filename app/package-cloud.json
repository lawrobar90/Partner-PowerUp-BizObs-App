{
  "name": "business-observability-engine",
  "version": "0.1.0", 
  "private": true,
  "description": "Dynatrace Business Observability App with Cloud & OnPrem Support",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:cloud": "CLOUD_MODE=true node server.js",
    "dev": "NODE_ENV=development node server.js",
    "validate": "node scripts/validate-startup.cjs",
    "restart-services": "curl -X POST http://localhost:${PORT:-8080}/api/admin/services/restart-all"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-dynatrace": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}